{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}

{% block body %}

   <div class="new-post">
   <h2>Fa√ßa uma nova postagem
   </h2>
   {{form(form)}}
   </div>

   {% for post in posts %}
   <div class="post">
         <a href="{{path('postDetails', {id:post.id})}}">{{post.id}}</a>
         <div class="post-title">
            <h1>{{post.title}}
            </h1>
         </div>
   
         <div class="post-dateUser">
            <p>Postado em {{post.creation_date|date}} por {{post.user_username}}
            </p>
         </div>
         
         <div>
            <div class="post-description">
               <p>{{post.description}}
               </p>
            </div>
            <div class="img">
               {% if post.file != null %}
                  <img src="{{asset ('upload/files/' ~ post.file)}}" alt="Not found" width="100%">
               {% endif %}
            </div>
         </div>
   </div>
   {% endfor %}
   </tbody>
</table>

{% endblock %}
